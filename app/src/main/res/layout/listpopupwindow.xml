<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listpw_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_list_radio"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/listdailog_nochennel"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/listdialognone"
            android:textSize="24sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/listpw_btn_dismiss"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/listView_coll"
        android:layout_marginBottom="45dp"
        android:contentDescription="@null"
        android:src="@drawable/btn_listdismiss_selector"/>

    <ListView
        android:id="@+id/listView_coll"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:listSelector="@color/transparent"
        android:scrollbars="@null"
        android:scrollingCache="false"/>
   
    <Button
        android:id="@+id/listView_btn1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/listpw_btn_dismiss"
        android:layout_alignParentLeft="true"
        android:background="@null"/>

    <Button
        android:id="@+id/listView_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/listView_coll"
        android:background="@null"/>

</RelativeLayout>